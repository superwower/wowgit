{
  "name": "wowgit",
  "version": "0.0.1",
  "description": "A git web client that wows you",
  "main": "server/index.ts",
  "scripts": {
    "dev": "ts-node-dev --ignore-watch client/.next server/index.ts",
    "build": "npm run build:clean && npm run build:next",
    "build:next": "next build client",
    "build:clean": "rm -rf client/.next",
    "clean": "rm -rf node_modules client/.next",
    "start": "NODE_ENV=production ts-node server/index.ts",
    "test": "npm run jest",
    "format": "prettier --list-different \"{**/*,*}.{js,ts,jsx,tsx,json,graphql}\"",
    "format:fix": "prettier --write \"{**/*,*}.{js,ts,jsx,tsx,json,graphql}\"",
    "lint": "npm run format && tslint -c tslint.json ./{*,**/*}.{ts,tsx}",
    "jest": "jest",
    "coverage": "jest --coverage"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true,
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testURL": "http://localhost/",
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/*.{test,spec}.{ts,tsx}"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/superwower/wowgit.git"
  },
  "keywords": [
    "git",
    "web"
  ],
  "author": "Super Wower",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/superwower/wowgit/issues"
  },
  "homepage": "https://github.com/superwower/wowgit#readme",
  "dependencies": {
    "@types/classnames": "^2.2.6",
    "@types/next": "^6.0.4",
    "@types/nodegit": "^0.22.3",
    "@zeit/next-typescript": "^1.1.0",
    "apollo-boost": "^0.1.15",
    "autoprefixer": "^9.0.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-wrap-in-js": "^1.1.1",
    "bulma": "^0.7.1",
    "classnames": "^2.2.6",
    "fastify": "^1.7.0",
    "fastify-graphql": "^4.0.0",
    "graphql": "^0.13.2",
    "graphql-import": "^0.7.0",
    "graphql-tag": "^2.9.2",
    "graphql-tools": "^3.0.5",
    "isomorphic-git": "^0.37.0",
    "isomorphic-unfetch": "^2.1.1",
    "next": "^6.1.1",
    "node-sass": "^4.9.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^2.1.6",
    "raw-loader": "^0.5.1",
    "react": "^16.4.1",
    "react-apollo": "^2.1.11",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "recompose": "^0.28.2",
    "redux": "^4.0.0",
    "redux-aggregate": "^1.4.18",
    "redux-devtools-extension": "^2.13.5",
    "sass-loader": "^7.0.3",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "23.3.2",
    "jest": "23.4.2",
    "prettier": "1.14.3",
    "react-test-renderer": "16.4.2",
    "ts-jest": "23.0.1",
    "ts-node-dev": "1.0.0-pre.26",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.14.0"
  }
}
