{
  "name": "wowgit",
  "version": "0.0.1",
  "description": "A git web client that wows you",
  "main": "server/index.ts",
  "scripts": {
    "dev": "ts-node-dev --ignore-watch .next server/index.ts",
    "build": "npm run build:clean && npm run build:next",
    "build:next": "next build",
    "build:clean": "rm -rf .next",
    "clean": "rm -rf node_modules .next",
    "start": "NODE_ENV=production ts-node server/index.ts",
    "test": "npm run jest",
    "format": "prettier --list-different \"{**/*,*}.{js,ts,jsx,tsx,json,graphql}\"",
    "format:fix": "prettier --write \"{**/*,*}.{js,ts,jsx,tsx,json,graphql}\"",
    "lint": "npm run format && tslint -c tslint.json ./{*,**/*}.{ts,tsx}",
    "jest": "jest",
    "coverage": "jest --coverage",
    "husky-hooks": "npm run lint && npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run husky-hooks",
      "pre-rebase": "npm run husky-hooks"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testURL": "http://localhost/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/superwower/wowgit.git"
  },
  "keywords": [
    "git",
    "web"
  ],
  "author": "Super Wower",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/superwower/wowgit/issues"
  },
  "homepage": "https://github.com/superwower/wowgit#readme",
  "dependencies": {
    "@types/next": "^6.0.4",
    "@types/nodegit": "^0.22.3",
    "@zeit/next-typescript": "^1.1.0",
    "autoprefixer": "^9.0.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-wrap-in-js": "^1.1.1",
    "bulma": "^0.7.1",
    "fastify": "^1.7.0",
    "fastify-graphql": "^4.0.0",
    "graphql": "^0.13.2",
    "graphql-import": "^0.6.0",
    "graphql-tools": "^3.0.5",
    "next": "^6.1.1",
    "node-sass": "^4.9.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^2.1.6",
    "raw-loader": "^0.5.1",
    "nodegit": "^0.22.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "sass-loader": "^7.0.3",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/jest": "^23.1.6",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.1",
    "prettier": "^1.13.7",
    "ts-jest": "^23.0.0",
    "ts-node-dev": "^1.0.0-pre.26",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.14.0"
  }
}
